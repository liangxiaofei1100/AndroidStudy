<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_article_new_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/article_title" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_article_new_autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/article_author" >
    </EditText>

    <EditText
        android:id="@+id/et_article_new_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:hint="@string/article_content" >
    </EditText>

</LinearLayout>